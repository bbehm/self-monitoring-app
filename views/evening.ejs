<%- include('./partials/loggedInMenu.ejs') %>
<div style="background-color: gray; opacity: 90%;"><br/><br/>
	<h3 style="text-align: center; color: white;">Report your evening behavior</h3>
	<form class="form-horizontal" method="POST" action="/behavior/reporting/evening">
		<div class="form-group slidecontainer">
			<label for="date" class="col-sm-8 control-label">Date</label>
			<div class="col-sm-12">
				<input class="form-control" id="date" type="date" name="date" value="<%= date %>" />
			</div>
		</div>
		<div class="form-group slidecontainer">
			<label for="exerciseTime" class="col-sm-8 control-label">Time spent exercising</label>
			<div class="col-sm-12">
				<input class="form-control" id="exerciseTime" type="number" name="exerciseTime" value="<%= exerciseTime %>" step="0.1" min="0" required />
			</div>
		</div>
		<div class="form-group slidecontainer">
			<label for="studyTime" class="col-sm-8 control-label">Time spent studying</label>
			<div class="col-sm-12">
				<input class="form-control" id="studyTime" type="number" name="studyTime" value="<%= studyTime %>" step="0.1" min="0" required />
			</div>
		</div>
		<div class="form-group slidecontainer">
			<label for="eating"> Rate your eating quality from 1 to 5</label>
			<input type="range" id="eating" min="1" max="5" value="<% eating %>" name="eating" class="slider" id="myRange">
		</div>
		<div class="form-group slidecontainer">
			<label for="eveningMood"> Rate your mood from 1 to 5</label>
			<input type="range" id="eveningMood" min="1" max="5" value="<% eveningMood %>" name="eveningMood" class="slider" id="myRange">
		</div>	
		<div class="col-sm-12">
            <input class="btn btn-secondary btn-lg btn-block" type="submit" value="Submit report!" />
		</div>
		<br><br>
	</form>
</div>
<% if (errors) { %>
    <%- include('./partials/errors.ejs', errors) %>
<% } %>
<%- include('./partials/footer.ejs') %>