<%- include('./partials/loggedInMenu.ejs') , {user: user} %>
<div><br/><br/>
<div class="d-flex justify-content-center">
    <h3>Today's reporting</h3>
</div>
<div class="mx-auto" style="width: 70%;">
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/morning">
        Morning
         <% if(morning){ %>
         ✅
         <% } %>
    </a>
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/evening">
         Evening
         <% if(evening){ %>
         ✅
         <% } %>
    </a>
</div>
<br>
<div class="mx-auto" id="info-div">
    <h2>Your average mood lately</h2>
    <h5 class="mt-4" style="text-align: center;">Your mood today: <%= moodToday %> / 5</h5>
    <h5 style="text-align: center;">Your mood yesterday: <%= moodYesterday %> / 5</h5>
    <br>
        <% if( moodToday > moodYesterday ) { %> 
            <h4>👍 This trend looks good 👍 </h4>
        <% } else if (moodToday < moodYesterday) { %> 
            <h4>😞 This trend doesn't look good 😞</h4>
        <% } else { %>
            <h4>😊 This looks stable 😊</h4>
        <% } %>
</div>
<br>
<div class="mx-auto" id="info-div">
    <h2>How is the community doing?</h2>
    <h5 class="mt-4" style="text-align: center;">Community mood today: <%= communityMoodToday %> / 5</h5>
    <h5 style="text-align: center;">Community mood yesterday: <%= communityMoodYesterday %> / 5</h5>
<br>
    <% if( communityMoodToday > communityMoodYesterday ) { %> 
        <h4>👍 This trend looks good 👍 </h4>
    <% } else if (communityMoodToday < communityMoodYesterday) { %> 
        <h4>😞 This trend doesn't look good 😞</h4>
    <% } else { %>
        <h4>😊 This looks stable 😊</h4>
    <% } %>
</div>
<br>
<div class="d-flex justify-content-center">
    <h3>Need to catch up on reporting?</h3>
</div>
<div class="mx-auto" style="width: 70%;">
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/morning">Make a morning report</a>
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/evening">Make an evening report</a>
</div>
</div>
<%- include('./partials/footer.ejs') %>