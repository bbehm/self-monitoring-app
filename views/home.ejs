<%- include('./partials/loggedInMenu.ejs') , {user: user} %>
<div style="background-color: gray; opacity: 90%;"><br/><br/>
<div class="d-flex justify-content-center">
<h3>Today's reporting<small class="text-light"> Remember to track today's behavior!</small></h3>
</div>
<div class="mx-auto" style="width: 70%;">
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/morning">
        Morning
         <% if(morning){ %>
         ✅
         <% } %>
    </a>
    <a class="btn btn-secondary btn-lg btn-block" href="/behavior/reporting/evening">
         Evening
         <% if(evening){ %>
         ✅
         <% } %>
    </a>
</div>
<br>
<div class="d-flex justify-content-center">
    <h3>Your average mood lately<small class="text-light"> How have you been feeling?</small></h3>
</div>
    <div class="mx-auto" style="width: 70%;">
        <h5 class="mt-4" style="text-align: center;">Your general mood today: <span style="color: lightgray"><%= moodToday %></span></h5>
        <h5 style="text-align: center;">Your general mood yesterday: <span style="color: lightgray"><%= moodYesterday %></span></h5>
    </div>
    <br>
    <div class="d-flex justify-content-center">
        <% if( moodToday > moodYesterday ) { %> 
            <p>Things are looking bright today 👍 </p>
        <% } else if (moodToday < moodYesterday) { %> 
            <p>Things are looking gloomy today 😞 </p>
        <% } else { %>
            <p>Things are about the same as yesterday 😊 </p>
        <% } %>
    </div>
<br>
<div class="d-flex justify-content-center">
    <h3>Community averages<small class="text-light"> Check out how the rest of the community is doing!</small></h3>
</div>
<br>
</div>
<%- include('./partials/footer.ejs') %>