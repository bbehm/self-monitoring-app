<%- include ('./partials/header.ejs') %>
<div class="mx-auto" style="width: 40%;">
    <br>
    <h1 style="text-align: center; color: white;">Create an account</h1>
    <form class="form-horizontal" method="POST" action="/auth/registration">
        <div class="form-group">
            <label for="email" class="col-sm-8 control-label">Email</label>
            <div class="col-sm-12">
                <input class="form-control" id="email" type="email" name="email" value="<%= email %>" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-8 control-label">Password</label>
            <div class="col-sm-12">
                <input class="form-control" id="password" type="password" name="password" />
            </div>
        </div>
        <div class="form-group">
            <label for="verification" class="col-sm-8 control-label">Confirm password</label>
            <div class="col-sm-12">
                <input class="form-control" type="password" id="verification" name="verification" />
            </div>
        </div>
        <div class="col-sm-12">
            <input class="btn btn-light" type="submit" value="Register" class="btn btn-primary" />
        </div>
    </form>
    <br>
    <% if (errors) { %>
        <%- include('./partials/errors.ejs', errors) %>
    <% } %>
</div>
<%- include ('./partials/footer.ejs') %>