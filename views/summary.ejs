<%- include('./partials/loggedInMenu.ejs') %>
<div><br/>
	<h3 style="text-align: center;">☀️ Here's a summary of your behavior ☀️</h3>
	<div class="mx-auto background-div">
		<div class="mx-auto" style="width: 50%;">
			<h2>Monthly Average</h2><br>
		<form class="form-horizontal" method="POST" action="/behavior/summary/month">
			<div class="form-group d-flex">
				<div class="col-sm-8">
					<input class="form-control" type="month" id="month" name="month" value="2020-<%= month %>" />
				</div>
				<div class="col-sm-8">
					<input class="btn btn-outline-dark" type="submit" value="Change month" />
				</div>
			</div>
		</form>
	</div>
		<div class="mx-auto" style="width: 79%;">
		<% if (monthData.length > 0) { %>
		<table class="table table-dark table-hover">
			<thead><tr>
				<th>Sleep Quality</th>
				<th>Sleep Duration</th>
				<th>Study Time</th>
				<th>Exercise Time</th>
				<th>Mood</th>
			</tr></thead>
			<tbody><tr>
				<td><%= monthData[0].sleepqualityavg %>/5.00</td>
				<td><%= monthData[0].sleepdurationavg %> hours</td>
				<td><%= monthData[0].studytimeavg %> hours</td>
				<td><%= monthData[0].exerciseavg %> hours</td>
				<td><%= monthData[0].moodavg %>/5.00</td>
			</tr></tbody>
		</table>
		<h6 style="text-align: center; color: white;">Showing data for month <%= monthData[0].month %></h6>
		<% } else { %>
			<h6 style="text-align: center;">No data for month <%= month %> yet 😞 </h6>
		<% }; %>
		</div>
	</div>
	<br>
	<div class="mx-auto background-div">
		<div class="mx-auto" style="width: 50%;">
			<h2>Weekly Average</h2><br>
		<form class="form-horizontal" method="POST" action="/behavior/summary/week">
			<div class="form-group d-flex">
				<div class="col-sm-8">
					<input class="form-control" type="week" name="week" value="2020-W<%= week %>"/>
				</div>
				<div class="col-sm-8">
					<input class="btn btn-outline-dark" type="submit" value="Change week" />
				</div>
			</div>
		</form>
		</div>
		<div class="mx-auto" style="width: 79%;">
		<% if (weekData.length > 0) { %>
		<table class="table table-dark table-hover">
			<thead><tr>
				<th>Sleep Quality</th>
				<th>Sleep Duration</th>
				<th>Study Time</th>
				<th>Exercise Time</th>
				<th>Mood</th>
			</tr></thead>
			<tbody><tr>
				<td><%= weekData[0].sleepqualityavg %>/5.00</td>
				<td><%= weekData[0].sleepdurationavg %> hours</td>
				<td><%= weekData[0].studytimeavg %> hours</td>
				<td><%= weekData[0].exerciseavg %> hours</td>
				<td><%= weekData[0].moodavg %>/5.00</td>
			</tr></tbody>
		</table>
		<h6 style="text-align: center; color: white;">Showing data for week <%= week %></h6>
		<% } else { %>
			<h6 style="text-align: center;">No data for week <%= week %> yet 😞 </h6>
		<% }; %>
		</div>
		<br>
	</div>
<%- include('./partials/footer.ejs') %>